<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgdetails"
    tools:context=".ui.UploadVideoActivity">

    <ImageView
        android:id="@+id/upload_thumbnail_image_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/uploader_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upload_thumbnail_image_view"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@color/white"
        android:hint="Enter Uploader name"
        android:padding="10dp"
        android:textColor="@color/mypink"
        android:textColorHint="@color/mypink"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/video_title_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/uploader_name_edit_text"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@color/white"
        android:hint="Enter Video Title"
        android:padding="10dp"
        android:textColor="@color/mypink"
        android:textColorHint="@color/mypink"
        android:textSize="20sp" />

    <Button
        android:id="@+id/upload_video_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/video_title_edit_text"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:text="@string/upload_video"
        android:textSize="20sp" />

    <Button
        android:id="@+id/upload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/upload_video_button"
        android:layout_centerHorizontal="true"
        android:text="@string/upload" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>